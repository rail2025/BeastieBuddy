<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Dalamud.NET.Sdk/13.0.0">
    <PropertyGroup>
        <Authors>rail</Authors>
        <Version>1.2.0.0</Version>
        <AssemblyName>BeastieBuddy</AssemblyName>
        <RootNamespace>BeastieBuddy</RootNamespace>
        <DalamudApiLevel>13</DalamudApiLevel>
        <TargetFramework>net9.0-windows</TargetFramework>
        <Platforms>x64</Platforms>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <PackageProjectUrl>https://github.com/rail2025/BeastieBuddy</PackageProjectUrl>
        <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
        <IsPackable>false</IsPackable>

    </PropertyGroup>

               <ItemGroup>

                <EmbeddedResource Include="iconsmall.png" />

                <EmbeddedResource Include="icon.png" />

                <Content Include="repo.json" />
            </ItemGroup>

               <ItemGroup>
                 <EmbeddedResource Include="BlueMageSpells.yaml" />
               </ItemGroup>

            <ItemGroup>
                <PackageReference Include="Lumina" Version="6.4.0" />
                <PackageReference Include="Lumina.Excel" Version="7.3.1" />
                <PackageReference Include="LuminaSupplemental.Excel" Version="3.0.0" />
                <PackageReference Include="SixLabors.ImageSharp" Version="3.1.11" />
                <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.2.0" />
                <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
                <PackageReference Include="YamlDotNet" Version="16.3.0" />
            </ItemGroup>

            <ItemGroup>
              <PackageReference Update="DalamudPackager" Version="13.0.0" />
            </ItemGroup>
        </Project>
    