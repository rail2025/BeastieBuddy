<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Dalamud.NET.Sdk/12.0.2">
    <PropertyGroup>
        <Authors>rail</Authors>
        <Version>1.0.0.0</Version>
        <AssemblyName>BeastieBuddy</AssemblyName>
        <RootNamespace>BeastieBuddy</RootNamespace>
        <DalamudApiLevel>12</DalamudApiLevel>
        <TargetFramework>net9.0-windows</TargetFramework>
        <Platforms>x64</Platforms>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <PackageProjectUrl>https://github.com/rail2025/BeastieBuddy</PackageProjectUrl>
        <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
        <IsPackable>false</IsPackable>

    </PropertyGroup>

               <ItemGroup>

                <Content Include="Data\MappyJson.json" />

                <EmbeddedResource Include="mappy.json" />

                <Content Include="repo.json" />
            </ItemGroup>

            <ItemGroup>
                <PackageReference Include="Lumina" Version="6.3.0" />
                <PackageReference Include="Lumina.Excel" Version="7.2.3" />
                <PackageReference Include="LuminaSupplemental.Excel" Version="2.3.12" />
                <PackageReference Include="SixLabors.ImageSharp" Version="3.1.8" />
                <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.1.5" />
                <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
            </ItemGroup>
        </Project>
    